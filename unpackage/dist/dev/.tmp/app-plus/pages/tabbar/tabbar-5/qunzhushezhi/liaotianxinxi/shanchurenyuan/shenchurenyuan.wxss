.uni-checkbox-input:hover {
  border: 1rpx solid #d1d1d1 !important;
}
.search {
  padding: 0rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  height: 40rpx;
  z-index: 8;
  background-color: #fff;
}
.search image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.search input {
    display: inline-block;
    vertical-align: middle;
    width: 655rpx;
    padding-left: 15rpx;
}
.myList {
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #333;
}
.myList .SelectList {
  position: relative;
  height: 140rpx;
  line-height: 140rpx;
  padding: 0rpx 50rpx;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}
.myList text {
  vertical-align: middle;
  margin-left: 15rpx;
  color: #666;
}
.myList .SelectList image:first-of-type {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 5px;
  display: inline-block;
  margin-top: 20rpx;
}
.myList .SelectList checkbox {
  float: right;
  vertical-align: middle;
}

